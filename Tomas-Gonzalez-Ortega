        // --- NAVIGATION LOGIC ---
        function navigateTo(sectionId) {
            // Update Menu UI
            document.querySelectorAll('.nav-item').forEach(el => el.classList.remove('active'));
            // Find button that links to this section (simplification)
            const btn = Array.from(document.querySelectorAll('.nav-item')).find(el => el.getAttribute('onclick').includes(sectionId));
            if(btn) btn.classList.add('active');

            // Hide all sections
            document.querySelectorAll('.section-view').forEach(el => {
                el.classList.add('hidden');
            });

            // Show target
            const target = document.getElementById(sectionId);
            target.classList.remove('hidden');
            
            // Re-render chart if entering skills section to ensure animation plays
            if(sectionId === 'skills') {
                renderChart();
            }

            // Scroll to top
            window.scrollTo(0, 0);
        }

        function toggleMobileMenu() {
            const menu = document.getElementById('mobile-menu');
            menu.classList.toggle('hidden');
        }

        // --- PORTFOLIO LOGIC ---
        
        function renderProjects(filter = 'all') {
            const grid = document.getElementById('projects-grid');
            grid.innerHTML = '';
            
            const filtered = filter === 'all' ? projects : projects.filter(p => p.type === filter);
            
            filtered.forEach(p => {
                const card = document.createElement('div');
                card.className = "bg-white rounded-xl shadow-sm hover:shadow-md transition border border-stone-200 overflow-hidden flex flex-col h-full";
                card.innerHTML = `
                    <div class="p-6 flex-grow">
                        <div class="flex justify-between items-start mb-4">
                            <span class="inline-block px-2 py-1 text-xs font-semibold bg-stone-100 text-stone-600 rounded uppercase tracking-wide">${p.type === 'academic' ? 'SEO & Academia' : p.type === 'ux-writing' ? 'UX Writing' : 'Documentaci√≥n'}</span>
                            <span class="text-stone-400 text-xs">${p.client}</span>
                        </div>
                        <h3 class="text-xl font-bold text-stone-900 mb-2">${p.title}</h3>
                        <p class="text-stone-600 text-sm line-clamp-3">${p.challenge}</p>
                    </div>
                    <div class="px-6 py-4 bg-stone-50 border-t border-stone-100">
                        <button onclick="openProjectModal(${p.id})" class="text-amber-600 font-medium text-sm hover:text-amber-800 flex items-center gap-1">
                            Ver An√°lisis Completo <span>‚Üí</span>
                        </button>
                    </div>
                `;
                grid.appendChild(card);
            });
        }

        function filterProjects(type) {
            // Update buttons
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active', 'bg-stone-800', 'text-white');
                btn.classList.add('bg-white', 'text-stone-600');
            });
            
            const activeBtn = Array.from(document.querySelectorAll('.filter-btn')).find(b => b.getAttribute('onclick').includes(type));
            activeBtn.classList.remove('bg-white', 'text-stone-600');
            activeBtn.classList.add('bg-stone-800', 'text-white');

            renderProjects(type);
        }

        // --- MODAL & INTERACTION LOGIC ---
        let currentProject = null;

        function openProjectModal(id) {
            currentProject = projects.find(p => p.id === id);
            if (!currentProject) return;

            document.getElementById('modal-title').innerText = currentProject.title;
            document.getElementById('modal-client').innerText = currentProject.client;
            document.getElementById('modal-role').innerText = currentProject.role;
            document.getElementById('modal-challenge').innerText = currentProject.challenge;
            document.getElementById('modal-impact').innerText = currentProject.impact;
            document.getElementById('modal-content').innerHTML = currentProject.content;

            // Reset interaction view
            toggleProjectView('before'); // Default to bad state
            
            document.getElementById('project-modal').classList.remove('hidden');
        }

        function closeModal() {
            document.getElementById('project-modal').classList.add('hidden');
        }

        function toggleProjectView(state) {
            const container = document.getElementById('interactive-component');
            const demo = currentProject.demo;
            const data = state === 'before' ? demo.before : demo.after;
            
            let html = '';

            if (demo.type === 'url') {
                html = `
                    <div class="w-full text-center">
                        <div class="text-xs text-stone-500 mb-1 uppercase font-bold">${state === 'before' ? 'Antes' : 'Despu√©s'}</div>
                        <div class="inline-block px-4 py-2 rounded border ${state === 'before' ? 'bg-red-50 border-red-200 text-red-800 decoration-red-500 line-through' : 'bg-green-50 border-green-200 text-green-800 font-mono'}">
                            ${data.val}
                        </div>
                        <p class="text-xs text-stone-400 mt-2">${demo.desc}</p>
                    </div>
                `;
            } else if (demo.type === 'message') {
                html = `
                    <div class="w-full max-w-sm mx-auto p-4 rounded border ${state === 'before' ? 'bg-white border-red-300' : 'bg-white border-stone-200 shadow-sm'}">
                        <label class="block text-xs font-bold text-stone-500 mb-1">Login Status</label>
                        <div class="p-3 rounded text-sm ${state === 'before' ? 'bg-red-100 text-red-800' : 'bg-blue-50 text-blue-800'}">
                            ${data.msg}
                        </div>
                        <p class="text-xs text-stone-400 mt-2 text-center">${demo.desc}</p>
                    </div>
                `;
            } else if (demo.type === 'image-guide') {
                html = `
                    <div class="flex flex-col items-center gap-2">
                         <div class="text-4xl">${state === 'before' ? 'üö´' : '‚úÖ'}</div>
                         <div class="font-bold text-sm ${state === 'before' ? 'text-red-600' : 'text-green-600'}">${data.val}</div>
                         <div class="text-xs bg-stone-100 px-2 py-1 rounded">${data.warning || "Optimizado"}</div>
                    </div>
                `;
            } else {
                 html = `
                    <div class="text-center">
                        <h4 class="font-bold">${data.title}</h4>
                        <p class="text-sm">${data.body}</p>
                    </div>
                `;
            }

            container.innerHTML = html;
        }

        // --- HERO INTERACTION ---
        let heroState = false; // false = bad, true = good
        function toggleHeroDemo() {
            heroState = !heroState;
            const card = document.getElementById('hero-microcopy-demo');
            const icon = document.getElementById('hero-icon');
            const label = document.getElementById('hero-label');
            const text = document.getElementById('hero-text');

            if (heroState) {
                // Good State
                card.classList.remove('border-red-200');
                card.classList.add('border-amber-400', 'bg-amber-50');
                icon.innerHTML = 'üëã';
                label.innerText = "Revisa tus datos";
                label.className = "text-xs font-bold text-amber-700 mb-1";
                text.innerText = "El usuario no coincide. Por favor verifica tu email e int√©ntalo de nuevo.";
            } else {
                // Bad State
                card.classList.add('border-red-200');
                card.classList.remove('border-amber-400', 'bg-amber-50');
                icon.innerHTML = '‚ö†Ô∏è';
                label.innerText = "ERROR 505";
                label.className = "text-xs font-bold text-red-600 mb-1";
                text.innerText = "Usuario no encontrado en la base de datos.";
            }
        }

        // --- CHART JS ---
        let chartInstance = null;

        function renderChart() {
            const ctx = document.getElementById('skillsChart').getContext('2d');
            
            if (chartInstance) {
                chartInstance.destroy();
            }

            chartInstance = new Chart(ctx, {
                type: 'radar',
                data: {
                    labels: ['UX Writing', 'SEO Strategy', 'CMS Mgmt', 'Design Ops', 'Analytics'],
                    datasets: [{
                        label: 'Nivel de Competencia',
                        data: [95, 90, 95, 80, 75],
                        fill: true,
                        backgroundColor: 'rgba(217, 119, 6, 0.2)', // Amber 600
                        borderColor: 'rgb(217, 119, 6)',
                        pointBackgroundColor: 'rgb(217, 119, 6)',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: 'rgb(217, 119, 6)'
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    elements: {
                        line: { borderWidth: 3 }
                    },
                    scales: {
                        r: {
                            angleLines: { color: '#e5e7eb' }, // stone-200
                            grid: { color: '#e5e7eb' },
                            pointLabels: {
                                font: { size: 12, family: 'Inter' },
                                color: '#44403C'
                            },
                            suggestedMin: 0,
                            suggestedMax: 100
                        }
                    },
                    plugins: {
                        legend: { display: false }
                    }
                }
            });
        }

        // --- INITIALIZATION ---
        window.onload = function() {
            renderProjects();
            // Start at home
            navigateTo('home');
        };

    </script>
</body>
